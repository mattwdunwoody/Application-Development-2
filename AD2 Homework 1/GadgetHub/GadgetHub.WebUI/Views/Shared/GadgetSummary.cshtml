@model GadgetHub.Domain.Entities.Gadget

<div class="card p-3 bg-light text-dark mb-2">

	@if (Model.ImageData != null)
	{
		<div class="pull-left" style="margin-right: 10px">
			<img class="img-thumbnail" width="75" height="75"
				 src="@Url.Action("GetImage", "Gadget", new { Model.GadgetID })" />
		</div>
	}

	<h3>
		<strong>@Model.GadgetName</strong>
		<span class="badge bg-primary float-end">
			@Model.GadgetPrice.ToString("c")
		</span>
	</h3>

	<span class="lead">@Model.GadgetDesc</span>

	@using (Html.BeginForm("AddToCart", "Cart"))
	{ 
		<div class="float-end">
			@Html.HiddenFor(x => x.GadgetID)
			@Html.Hidden("returnUrl", Request.Url.PathAndQuery)

			<input type="submit" class="btn btn-success" value="Add to cart" />
		</div>
	}

</div>