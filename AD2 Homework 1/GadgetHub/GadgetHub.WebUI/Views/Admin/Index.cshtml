@model IEnumerable<GadgetHub.Domain.Entities.Gadget>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-header">
        <h3>All Products</h3>
    </div>

	<div class="card-body">
		<table class="table table-striped table-condensed table-bordered">
			<tr>
				<th class="text-right">
					ID
				</th>
				<th>
					Name
				</th>
				<th class="text-right">
					Price
				</th>
				<th class="text-center">
					Actions
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@item.GadgetID
					</td>
					<td>
						@Html.ActionLink(item.GadgetName, "Edit", new { item.GadgetID })
					</td>
					<td>
						@item.GadgetPrice.ToString("c")
					</td>
					<td class="text-center">
						@using (Html.BeginForm("Delete", "Admin"))
						{
							@Html.Hidden("GadgetID", item.GadgetID)
							<input type="submit" class="btn btn-primary" value="Delete" />
						}
					</td>
				</tr>
			}

		</table>
	</div>

	<div class="card-footer">
		@Html.ActionLink("Add a new product", "Create", null, new { @class = "btn btn-primary" })
	</div>
</div>

